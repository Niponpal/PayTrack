@model IEnumerable<PayTrack.Models.Designation>



<div class="card">
    <div class="card-header d-flex  justify-content-between align-items-center">
        <h3 class="card-title">DataTable with Designation</h3>
        <a asp-action="CreateOrEdit" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Attendance
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Designation Name</th>
                    <th>Level</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.ID</td>
                            <td>@item.DesignationName</td>
                            <td>@(string.IsNullOrWhiteSpace(item.Level) ? "-" : item.Level)</td>
                            <!-- Actions -->
                            <td class="text-center">

                                <div class="d-flex flex-wrap justify-content-center gap-1">

                                    <!-- Edit Button -->
                                    <a asp-action="CreateOrEdit" asp-route-id="@item.ID" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <!-- Delete Button -->
                                    <form method="post" asp-action="Delete" asp-route-id="@item.ID" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>

                                    <!-- Details Button -->
                                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                </div>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-3">
                            No attendance records found.
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Designation Name</th>
                    <th>Level</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>


@section Scripts {
    <script>
        $(function () {
          // $("#example1").DataTable({
          //   "responsive": true, "lengthChange": false, "autoWidth": false,
          //   "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
          // }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
          $('#example1').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
        });
    </script>

}


