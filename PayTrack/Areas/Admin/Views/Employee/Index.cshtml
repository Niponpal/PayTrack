@model List<PayTrack.Models.Employee>


<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">DataTable with Employee</h3>
        <a asp-action="CreateOrEdit" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Employee
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Joining Date</th>
                    <th>Salary</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.ID</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>@employee.JoiningDate.ToString("yyyy-MM-dd")</td>
                        <td>@employee.SalaryBase.ToString("C")</td>
                        <td class="@(employee.Status == "Active" ? "text-success" : "text-danger")">
                            @employee.Status
                        </td>
                        <td class="text-center">
                            <!-- Edit Button -->
                            <a asp-action="CreateOrEdit" asp-route-id="@employee.ID" class="btn btn-sm btn-primary mb-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <!-- Delete Button -->
                            <form method="post" asp-action="Delete" asp-route-id="@employee.ID" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                <button type="submit" class="btn btn-sm btn-danger mb-1">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>

                            <!-- Details Button -->
                            <a asp-action="Details" asp-route-id="@employee.ID" class="btn btn-sm btn-info mb-1">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Joining Date</th>
                    <th>Salary</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>


@section Scripts {
    <script>
        $(function () {
          // $("#example1").DataTable({
          //   "responsive": true, "lengthChange": false, "autoWidth": false,
          //   "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
          // }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
          $('#example1').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
        });
    </script>

}

