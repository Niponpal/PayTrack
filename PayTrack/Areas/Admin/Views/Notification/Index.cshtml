@model IEnumerable<PayTrack.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}




<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">DataTable with Notification </h3>
        <a asp-action="CreateOrEdit" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Notification
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Message</th>
                    <th>Created At</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var statusClass = item.Status == "Unread" ? "fw-bold text-danger" : "text-success";
                    <tr>
                        <td>@item.ID</td>
                        <td class="@statusClass">@item.Message</td>
                        <td>@item.CreatedAt.ToString("MMM dd, yyyy - hh:mm tt")</td>
                        <td>
                            <span class="badge @(item.Status == "Unread" ? "bg-warning text-dark" : "bg-success")">
                                @item.Status
                            </span>
                        </td>
                        <td class="">
                            <div class="d-flex justify-content-center m-2">
                                <a asp-action="CreateOrEdit" asp-route-id="@item.ID" class="btn btn-primary m-1"> <i class="bi bi-pencil-square"></i></a>
                                <form class="m-1" method="post" asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Are You Sure Delete this Data')">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary m-1"> <i class="bi bi-eye"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Message</th>
                    <th>Created At</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>


@section Scripts {
    <script>
        $(function () {
          // $("#example1").DataTable({
          //   "responsive": true, "lengthChange": false, "autoWidth": false,
          //   "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
          // }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
          $('#example1').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
        });
    </script>

}








