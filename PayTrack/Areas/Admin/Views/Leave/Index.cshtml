@model IEnumerable<PayTrack.Models.Leave>



<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">DataTable with Leave</h3>
        <a asp-action="CreateOrEdit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Leave
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>LeaveType</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>@item.LeaveType</td>
                        <td>@item.Status</td>
                        <td class="">
                            <div class="d-flex justify-content-center m-2">
                                <a asp-action="CreateOrEdit" asp-route-id="@item.ID" class="btn btn-primary m-1"> <i class="bi bi-pencil-square"></i></a>
                                <form class="m-1" method="post" asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Are You Sure Delete this Data')">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary m-1"> <i class="bi bi-eye"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>LeaveType</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>


@section Scripts {
    <script>
        $(function () {
          // $("#example1").DataTable({
          //   "responsive": true, "lengthChange": false, "autoWidth": false,
          //   "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
          // }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
          $('#example1').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
          });
        });
    </script>

}





