@model List<PayTrack.Models.Department>

<div class="card">
    <div class="card-header d-flex  justify-content-between align-items-center">
        <h3 class="card-title">DataTable with Department</h3>
        <a asp-action="CreateOrEdit" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New Department
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Department Name</th>
                    <th>Description </th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.Description</td>

                    <!-- Actions -->
                    <td class="text-center">

                        <div class="d-flex flex-wrap justify-content-center gap-1">

                            <!-- Edit Button -->
                            <a asp-action="CreateOrEdit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <!-- Delete Button -->
                            <form method="post" asp-action="Delete" asp-route-id="@item.ID" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>

                            <!-- Details Button -->
                            <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                            </a>

                        </div>
                    </td>
                </tr>
            }
            <tbody>
            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Department Name</th>
                    <th>Description </th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>





