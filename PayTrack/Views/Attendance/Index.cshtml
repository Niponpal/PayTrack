@model IEnumerable<PayTrack.Models.Attendance>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<div class="container mt-4">

    <!-- Create Button -->
    <a asp-action="CreateOrEdit" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Create New Attendance
    </a>

    <!-- Attendance Table -->
    <div class="table-responsive">
        <table class="table table-hover align-middle table-bordered">
            <thead class="table-primary text-center">
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>In Time</th>
                    <th>Out Time</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.ID</td>
                            <td>@item.Date.ToString("yyyy-MM-dd")</td>

                            <!-- TimeSpan formatting -->
                            <td>@(item.InTime.HasValue ? (DateTime.Today + item.InTime.Value).ToString("hh:mm tt") : "-")</td>
                            <td>@(item.OutTime.HasValue ? (DateTime.Today + item.OutTime.Value).ToString("hh:mm tt") : "-")</td>

                            <!-- Status badges -->
                            <td>
                                @switch (item.Status)
                                {
                                    case "Present":
                                        <span class="badge bg-success">P</span>
                                        ;
                                        break;
                                    case "Absent":
                                        <span class="badge bg-danger">A</span>
                                        ;
                                        break;
                                    case "Leave":
                                        <span class="badge bg-warning text-dark">L</span>
                                        ;
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@item.Status</span>
                                        ;
                                        break;
                                }
                            </td>

                            <!-- Actions -->
                            <td>
                                <a asp-action="CreateOrEdit" asp-route-id="@item.ID" class="btn btn-sm btn-primary me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this record?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-3">
                            No attendance records found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
