@model PayTrack.Models.Attendance

@{
    ViewData["Title"] = "Attendance Details";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Attendance Details</h4>
        </div>

        <div class="card-body">
            <dl class="row">

                <!-- ID -->
                <dt class="col-sm-3 fw-semibold">ID:</dt>
                <dd class="col-sm-9">@Model.ID</dd>

                <!-- Date -->
                <dt class="col-sm-3 fw-semibold">Date:</dt>
                <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

                <!-- In Time -->
                <dt class="col-sm-3 fw-semibold">In Time:</dt>
                <dd class="col-sm-9">
                    @(Model.InTime.HasValue ? (DateTime.Today + Model.InTime.Value).ToString("hh:mm tt") : "-")
                </dd>

                <!-- Out Time -->
                <dt class="col-sm-3 fw-semibold">Out Time:</dt>
                <dd class="col-sm-9">
                    @(Model.OutTime.HasValue ? (DateTime.Today + Model.OutTime.Value).ToString("hh:mm tt") : "-")
                </dd>

                <!-- Status -->
                <dt class="col-sm-3 fw-semibold">Status:</dt>
                <dd class="col-sm-9">
                    @switch (Model.Status)
                    {
                        case "Present":
                            <span class="badge bg-success">Present</span>
                            ;
                            break;
                        case "Absent":
                            <span class="badge bg-danger">Absent</span>
                            ;
                            break;
                        case "Leave":
                            <span class="badge bg-warning text-dark">Leave</span>
                            ;
                            break;
                        default:
                            <span class="badge bg-secondary">@Model.Status</span>
                            ;
                            break;
                    }
                </dd>

            </dl>

            <!-- Back button -->
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
                <a asp-action="CreateOrEdit" asp-route-id="@Model.ID" class="btn btn-primary ms-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
