@model PayTrack.Models.SalaryComponent

<div class="container mt-4">
    <!-- Title -->
    <h2 class="text-center bg-primary text-white py-2 rounded shadow-sm mb-4">
        @(Model.ID == 0 ? "Add New Salary Component" : "Edit Salary Component")
    </h2>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-sm rounded-3 border-0">
                <div class="card-body">
                    <form asp-action="CreateOrEdit" method="post">
                        @if (Model.ID != 0)
                        {
                            <input type="hidden" asp-for="ID" />
                        }

                        <!-- Component Name -->
                        <div class="mb-3">
                            <label asp-for="ComponentName" class="form-label fw-semibold">Component Name</label>
                            <input asp-for="ComponentName" class="form-control" placeholder="Enter component name (e.g. Basic Pay, Bonus)" />
                            <span asp-validation-for="ComponentName" class="text-danger"></span>
                        </div>

                        <!-- Amount -->
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label fw-semibold">Amount (৳)</label>
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="Enter amount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save2"></i> @(Model.ID == 0 ? "Save" : "Update")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
