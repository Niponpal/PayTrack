@model List<PayTrack.Models.Employee>

<a asp-action="CreateOrEdit" class="btn btn-primary mb-3">Add New Employee</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Joining Date</th>
            <th>Salary</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.ID</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>@employee.JoiningDate.ToString("yyyy-MM-dd")</td>
                <td>@employee.SalaryBase.ToString("C")</td>
                <td class="@(employee.Status == "Active" ? "text-success" : "text-danger")">
                    @employee.Status
                </td>
                <td class="text-center">
                    <!-- Edit Button -->
                    <a asp-action="CreateOrEdit" asp-route-id="@employee.ID" class="btn btn-sm btn-primary mb-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>

                    <!-- Delete Button -->
                    <form method="post" asp-action="Delete" asp-route-id="@employee.ID" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this record?');">
                        <button type="submit" class="btn btn-sm btn-danger mb-1">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>

                    <!-- Details Button -->
                    <a asp-action="Details" asp-route-id="@employee.ID" class="btn btn-sm btn-info mb-1">
                        <i class="bi bi-eye"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
